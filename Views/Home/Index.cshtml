@model List<NUCCITWebApp.Models.Comment>

@{
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>National University - CCIT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/home.css">
</head>

<body>

    <div class="overlay">
        <div class="title_container">
            <h1>WELCOME TO</h1>
            <h2>NATIONAL UNIVERSITY - MANILA</h2>
            <h3>COLLEGE OF COMPUTING AND <br> INFORMATION TECHNOLOGIES</h3>
        </div>
    </div>

    <!-- Section 1 -->
    <section class="section_1">
        <h4>What is <strong>CCIT</strong> ?</h4>
        <p>
            The National University Manila is a prominent educational institution in the Philippines that offers a variety of
            programs in the College of Computing and Information Technologies (CCIT). The curriculum typically covers subjects
            such as computer science, information technology, and related fields. Students have access to state-of-the-art
            facilities and a dedicated faculty to develop their skills in programming, data analysis, cyber security, and
            more.
        </p>
        <p>
            The university aims to prepare graduates for careers in the rapidly evolving world of technology and computing.
            For the most up-to-date information, we recommend visiting the university's official website or contacting them
            directly.
        </p>
    </section>

    <!-- Section 2 -->
    <section class="section_2">
        <h4>In CCIT, the BSIT program has two specialization tracks:</h4>
        <div class="container">
            <div class="row justify-content-center">
                <!-- Card 1 -->
                <div class="col-md-6">
                    <div class="prog_card card mb-5 shadow-sm">
                        <div class="card-body text-center">
                         <img class="img_placeholder" src="~/img/pic1.jfif" alt="mwa" />
                            <h5 class="prog_title card-title">The Mobile and Web Applications (MWA) specialization.</h5>
                            <a href="https://national-u.edu.ph/nu-manila/computing-and-information-technologies/bachelor-of-science-in-information-technology/" class="prog_btn btn btn-primary mt-3">Know more</a>
                        </div>
                    </div>
                </div>
                <!-- Card 2 -->
                <div class="col-md-6">
                    <div class="prog_card card mb-5 shadow-sm">
                        <div class="card-body text-center">
                            <img class="img_placeholder" src="~/img/pic4.jfif" alt="maa" />
                            <h5 class="card-title">The Multimedia Arts and Animation (MAA) specialization.</h5>
                            <a href="https://national-u.edu.ph/nu-manila/computing-and-information-technologies/bachelor-of-science-in-information-technology/" class="prog_btn btn btn-primary mt-3">Know more</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section 3 -->
    <section class="section_3">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6">
                    <h1>COMMENTS</h1>
                </div>
            </div>
            <div class="row mt-4">
                @foreach (var comment in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="comment_card card-body">
                                <p class="card-text">@comment.CommentText</p>
                                <h5 class="card-title">Specialization: @comment.Role</h5>
                                <p class="text-muted">Posted on: @(comment.DatePosted?.ToString("MMMM dd, yyyy") ?? "Date not available")</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-qYJZ5EKSy1w5/t29LOasOP5fWXl9XhD96ttVFSd4ZwAALgLCPkCl6TVPbgcrO3nF" crossorigin="anonymous"></script>
</body>

</html>
